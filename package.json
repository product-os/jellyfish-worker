{
  "name": "@balena/jellyfish-worker",
  "version": "10.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-worker.git"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "description": "Worker library for Jellyfish",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint ./lib && npm run check && deplint && depcheck --ignore-bin-package --ignores=shellcheck,@types/jest",
    "lint:fix": "balena-lint --fix lib test",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest ./lib",
    "test:integration": "jest --verbose --maxWorkers=1 --forceExit ./test/integration",
    "test:compose": "DOCKER_BUILDKIT=1 docker build -t balena/jellyfish-worker_sut:latest --secret id=npmrc,src=.balena/secrets/npmrc.txt . && docker-compose -f docker-compose.test.yml -f docker-compose.yml up --exit-code-from=sut",
    "doc": "typedoc ./lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "check": "jellycheck",
    "compose": "docker-compose up"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "balena-lint --fix"
    ]
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-assert": "^1.1.67",
    "@balena/jellyfish-jellyscript": "^4.9.43",
    "@balena/jellyfish-logger": "^3.0.67",
    "bluebird": "^3.7.2",
    "errio": "^1.2.2",
    "fast-equals": "^2.0.3",
    "fast-json-patch": "^3.1.0",
    "iso8601-duration": "^1.3.0",
    "json-e": "^4.4.1",
    "lodash": "^4.17.21",
    "semver": "^7.3.5",
    "skhema": "^5.3.4",
    "typed-error": "^3.2.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.1.3",
    "@balena/jellyfish-action-library": "^15.1.3",
    "@balena/jellyfish-config": "^1.4.3",
    "@balena/jellyfish-core": "^5.7.0",
    "@balena/jellyfish-environment": "^5.0.1",
    "@balena/jellyfish-plugin-base": "^2.1.222",
    "@balena/jellyfish-plugin-default": "^20.1.0",
    "@balena/jellyfish-queue": "^1.0.241",
    "@balena/jellyfish-types": "^1.1.0",
    "@balena/lint": "^6.1.1",
    "@types/bluebird": "^3.5.36",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.172",
    "@types/semver": "^7.3.8",
    "@types/sinon": "^10.0.2",
    "@types/uuid": "^8.3.1",
    "depcheck": "^1.4.2",
    "deplint": "^1.1.3",
    "jest": "^27.1.0",
    "jest-esm-transformer": "^1.0.0",
    "lint-staged": "^11.1.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.6.1",
    "sinon": "^11.1.2",
    "ts-jest": "^27.0.5",
    "typedoc": "^0.21.9",
    "typescript": "^4.4.2"
  },
  "peerDependencies": {
    "@balena/jellyfish-action-library": "^15.1.3",
    "@balena/jellyfish-core": "^5.7.0",
    "@balena/jellyfish-environment": "^5.0.1",
    "@balena/jellyfish-plugin-base": "^2.1.184",
    "@balena/jellyfish-plugin-default": "^20.1.0",
    "@balena/jellyfish-queue": "^1.0.241"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "versionist": {
    "publishedAt": "2021-09-09T07:16:22.198Z"
  }
}
