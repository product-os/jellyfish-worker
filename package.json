{
  "name": "@balena/jellyfish-worker",
  "version": "5.0.9",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-worker.git"
  },
  "engines": {
    "node": ">=12.5.0"
  },
  "description": "Worker library for Jellyfish",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint ./lib && npm run check && deplint && depcheck --ignore-bin-package --ignores=shellcheck,@types/jest",
    "lint-fix": "balena-lint --fix ./lib",
    "unit": "jest ./lib",
    "test": "npm run lint && npm run unit",
    "doc": "typedoc ./lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "check": "jellycheck"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "balena-lint --fix"
    ]
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-assert": "^1.1.42",
    "@balena/jellyfish-jellyscript": "^4.0.9",
    "@balena/jellyfish-logger": "^3.0.5",
    "bluebird": "^3.7.2",
    "errio": "^1.2.2",
    "fast-equals": "^2.0.3",
    "fast-json-patch": "^3.0.0-1",
    "iso8601-duration": "^1.3.0",
    "json-e": "^4.4.1",
    "lodash": "^4.17.21",
    "semver": "^7.3.5",
    "skhema": "^5.3.4",
    "typed-error": "^3.2.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.1.1",
    "@balena/jellyfish-action-library": "^11.0.3",
    "@balena/jellyfish-config": "^1.0.6",
    "@balena/jellyfish-core": "^2.13.134",
    "@balena/jellyfish-environment": "^4.1.15",
    "@balena/jellyfish-plugin-base": "^2.1.98",
    "@balena/jellyfish-plugin-default": "^12.0.4",
    "@balena/jellyfish-queue": "^1.0.93",
    "@balena/jellyfish-types": "^0.5.119",
    "@balena/lint": "^6.1.1",
    "@types/bluebird": "^3.5.35",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@types/semver": "^7.3.6",
    "@types/sinon": "^10.0.2",
    "@types/uuid": "^8.3.0",
    "depcheck": "^1.4.1",
    "deplint": "^1.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.4.1",
    "sinon": "^10.0.1",
    "ts-jest": "^26.5.6",
    "typedoc": "^0.20.36",
    "typescript": "^4.3.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
