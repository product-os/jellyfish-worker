{
  "name": "@balena/jellyfish-worker",
  "version": "14.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-worker.git"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "description": "Worker library for Jellyfish",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint lib test && deplint",
    "lint:fix": "balena-lint --fix lib test",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest ./lib",
    "test:integration": "jest --verbose --maxWorkers=1 --forceExit ./test/integration",
    "test:compose": "docker build -t balena/jellyfish-sut:latest . && docker-compose -f docker-compose.test.yml -f docker-compose.yml up --exit-code-from=sut",
    "doc": "typedoc ./lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "compose": "docker-compose up"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "balena-lint --fix"
    ]
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "Apache-2.0",
  "dependencies": {
    "@balena/jellyfish-assert": "^1.2.8",
    "@balena/jellyfish-core": "^13.3.0",
    "@balena/jellyfish-jellyscript": "^5.1.9",
    "@balena/jellyfish-logger": "^4.0.19",
    "@balena/jellyfish-queue": "^3.1.8",
    "@types/is-uuid": "^1.0.0",
    "bcrypt": "^5.0.1",
    "errio": "^1.2.2",
    "fast-equals": "^2.0.4",
    "fast-json-patch": "^3.1.0",
    "iso8601-duration": "^1.3.0",
    "json-e": "^4.4.3",
    "lodash": "^4.17.21",
    "semver": "^7.3.5",
    "skhema": "^6.0.2",
    "typed-error": "^3.2.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@balena/jellyfish-config": "^2.0.2",
    "@balena/jellyfish-environment": "^6.0.1",
    "@balena/jellyfish-types": "^2.0.3",
    "@balena/lint": "^6.2.0",
    "@types/bcrypt": "^5.0.0",
    "@types/bluebird": "^3.5.36",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/request": "^2.48.8",
    "@types/semver": "^7.3.9",
    "@types/sinon": "^10.0.6",
    "@types/uuid": "^8.3.4",
    "bluebird": "^3.7.2",
    "deplint": "^1.1.3",
    "jest": "^27.4.7",
    "jest-esm-transformer": "^1.0.0",
    "lint-staged": "^12.2.0",
    "nock": "^13.2.2",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "sinon": "^12.0.1",
    "ts-jest": "^27.1.3",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "versionist": {
    "publishedAt": "2022-01-20T06:21:22.192Z"
  }
}
